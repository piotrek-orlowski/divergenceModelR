## Use the R_HOME indirection to support installations of multiple R version
LD_LIBRARY_PATH += $(HOME)/lib/R-4.0.0/affineModelR/libs
LD_LIBRARY_PATH += $(HOME)/lib/R-4.0.0/ukfRcpp/libs

PKG_LIBS += `$(R_HOME)/bin/Rscript -e "Rcpp:::LdFlags()"` $(LAPACK_LIBS) $(BLAS_LIBS) $(FLIBS) -lz -L$(HOME)/lib/R-4.0.0/affineModelR/libs -L$(HOME)/lib/R-4.0.0/ukfRcpp/libs 
PKG_CXXFLAGS = -fpermissive
PKG_CPPFLAGS = -I$(HOME)/lib/R-4.0.0/ukfRcpp/libs/affineModelR/include -I$(HOME)/lib/R-4.0.0/ukfRcpp/libs/ukfRcpp/include
PKG_CFLAGS= -fpermissive
